@using Models.Enums
@using Markdig
@model Models.Entities.Project

@{
    ViewBag.Title = Model.Title;
    Layout = "_Layout";
}

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-10">
                    <strong> @(Model.Title) </strong>
                </div>
                <div class="col-sm-2">
                    <div class="btn-group pull-right">
                        <label class="btn btn-success">
                            @Model.Votes.Count(x => x.Value == Vote.Up)
                        </label>
                        <label class="btn btn-danger">
                            @Model.Votes.Count(x => x.Value == Vote.Down)
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-body">@Html.Raw(Markdown.ToHtml(Model.Description))</div>
    </div>
</div>
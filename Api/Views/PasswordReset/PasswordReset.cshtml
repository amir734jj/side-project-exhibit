@model Models.ViewModels.PasswordReset.PasswordResetViewModel

@{
    ViewBag.Title = "Password Reset";
    Layout = "_Layout";
}


@await Html.PartialAsync("SimpleAlertContent", ViewData)

@using (Html.BeginForm("PasswordResetHandler", "PasswordReset", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    
    @Html.HiddenFor(x => x.Token)

    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email, new {@class = "form-control disabled", type = "email", required = "required"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.Username)
        @Html.TextBoxFor(x => x.Username, new {@class = "form-control disabled", type = "text", required = "required"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.TextBoxFor(x => x.Password, new {@class = "form-control", type = "password", required = "required"})

        @Html.ValidationMessageFor(m => m.Password)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.ConfirmPassword)
        @Html.TextBoxFor(x => x.ConfirmPassword, new {@class = "form-control", type = "password", required = "required"})
        
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Reset Password</button>
    </div>
}

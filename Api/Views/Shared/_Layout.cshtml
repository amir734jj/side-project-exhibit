                {
                    <li><a href="~/Account/Register"><span class="glyphicon glyphicon-user"></span> Register </a></li>
                    <li><a href="~/Account/login"><span class="glyphicon glyphicon-log-in"></span> Login </a></li>
                }
                else
                {
                    <li><a href="~/Profile"><span class="glyphicon glyphicon-user"></span> Profile</a></li>
                    <li><a href="~/Account/Logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                }
            </ul>
        </div>
    </div>
</nav>


<div class="container-fluid" ng-app="ideaBoardApp" ng-cloak>

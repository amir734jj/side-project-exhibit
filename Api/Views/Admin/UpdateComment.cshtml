@model Models.ViewModels.Api.CommentViewModel

@{
    Layout = "_Layout";
}

<div class="container">
    <div class="page-header">
        <h3>Update Comment</h3>
    </div>

    @using (Html.BeginForm("UpdateCommentHandler", "Admin", FormMethod.Post, new {@class = "form-horizontal"}))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Comment, new {@class = "control-label col-sm-2"})

            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Comment, new {type = "text", placeholder = "Enter comment", @class = "form-control", required = "required"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </div>
    }
</div>
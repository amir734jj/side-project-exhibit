@using Models.Extensions
@model Models.Entities.User

@{
    Layout = "_Layout";
}

<div class="container">
    <h3> @Model.Name </h3>

    <div class="clearfix">
        <p class="preserve-linebreak readable-text"> @Model.Description </p>
    </div>

    <div class="clearfix">
        <p> Email: <a href="mailto:@Model.Email">@Model.Email</a> </p>
    </div>

    <div class="clearfix">
        <ul class="list-group">
            @foreach (var project in Model.Projects)
            {
                <li class="list-group-item">
                    <a href="~/Project/@project.Id" class="link-header"> @(project.Title) </a>
                    <span class="badge"> @(project.Votes.Select(x => x.Value.IntValue()).Sum()) </span>
                </li>
            }
        </ul>
    </div>
</div>
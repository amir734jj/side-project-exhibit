@model Models.ViewModels.PasswordReset.PasswordResetRequestViewModel

@{
    ViewBag.Title = "Password Reset Request";
    Layout = "_Layout";
}

<div class="container">

@using (Html.BeginForm("PasswordResetRequestHandler", "PasswordReset", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email, new {@class = "form-control", type = "email", required = "required"})

        @Html.ValidationMessageFor(m => m.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Username)
        @Html.TextBoxFor(x => x.Username, new {@class = "form-control", type = "text", required = "required"})

        @Html.ValidationMessageFor(m => m.Username)
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Request Reset Email</button>
    </div>
}

</div>
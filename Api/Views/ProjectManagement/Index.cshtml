@using Models.Enums
@model List<Models.ViewModels.Api.ProjectViewModel>

@{
    ViewBag.Title = "Login user";
    Layout = "_Layout";
}

<div class="container">
    <div class="page-header">
        <h3> Your projects </h3>
    </div>

    @foreach (var project in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-10">
                        <a href="~/Projects/Update/@(project.Id)"> @(project.Title) </a>
                    </div>
                    <div class="col-sm-2">
                        <div class="btn-group">
                            <button type="button" class="btn btn-success" disabled>  <span class="badge"> @project.Votes.Count(x => x.Value == Vote.Up) </span></button>
                            <button type="button" class="btn btn-danger" disabled>  <span class="badge"> @project.Votes.Count(x => x.Value == Vote.Down) </span></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-body">@(project.Description)</div>
        </div>
    }
</div>